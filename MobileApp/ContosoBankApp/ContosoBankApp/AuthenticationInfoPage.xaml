<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContosoBankApp.AuthenticationInfoPage"
             Title="Your Login Info">

  <ContentPage.Content>
    <ScrollView Orientation="Vertical">
      <StackLayout VerticalOptions="Center" HorizontalOptions="Center" >
        <Label Text="{Binding UserId}" />
        <Label Text="{Binding UserName}" />
        <Label Text="{Binding UClientId}" />
        <Label Text="{Binding TokenType}" />
        <Label Text="{Binding ExpiresOn}" />
        <Editor Text="{Binding IdToken}" />
      </StackLayout>
    </ScrollView>
  </ContentPage.Content>
  
</ContentPage>